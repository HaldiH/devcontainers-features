{
    "id": "ctranslate2-rocm",
    "version": "0.1.5",
    "name": "CTranslate2 ROCm",
    "description": "Installs CTranslate2 with ROCm support for AMD GPUs",
    "dependsOn": {
        "ghcr.io/haldih/devcontainer-features/rocm:latest": {}
    },
    "options": {
        "pytorchRocmArch": {
            "type": "string",
            "default": "gfx1030",
            "description": "The ROCm architecture to use for PyTorch. Default is 'gfx1030'."
        },
        "rocmPath": {
            "type": "string",
            "default": "/opt/rocm",
            "description": "The installation path of ROCm."
        }
    }
}